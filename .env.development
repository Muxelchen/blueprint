# Environment Variables for Blueprint UI System

# Development
VITE_APP_NAME=Blueprint UI System
VITE_APP_VERSION=1.0.0
VITE_NODE_ENV=development

# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_TIMEOUT=10000

# Feature Flags
VITE_ENABLE_DEBUG=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_ANALYTICS=false

# Performance Settings
VITE_MAX_BUNDLE_SIZE=500
VITE_PRELOAD_COMPONENTS=true
VITE_ENABLE_VIRTUALIZATION=true
VITE_CACHE_TTL=300000

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# Component Registry
VITE_AUTO_REGISTER_COMPONENTS=true
VITE_COMPONENT_LAZY_LOADING=true