# Environment Variables for Production

# Production
VITE_APP_NAME=Blueprint UI System
VITE_APP_VERSION=1.0.0
VITE_NODE_ENV=production

# API Configuration
VITE_API_BASE_URL=https://api.your-domain.com/api
VITE_API_TIMEOUT=5000

# Feature Flags
VITE_ENABLE_DEBUG=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_ANALYTICS=true

# Performance Settings
VITE_MAX_BUNDLE_SIZE=300
VITE_PRELOAD_COMPONENTS=true
VITE_ENABLE_VIRTUALIZATION=true
VITE_CACHE_TTL=600000

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# Component Registry
VITE_AUTO_REGISTER_COMPONENTS=true
VITE_COMPONENT_LAZY_LOADING=true

# CDN Configuration
VITE_CDN_URL=https://cdn.your-domain.com
VITE_STATIC_ASSETS_URL=https://assets.your-domain.com